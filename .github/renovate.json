{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"schedule": [
		"before 4am"
	],
	"timezone": "UTC",
	"labels": [
		"dependencies"
	],
	"assignees": [
		"@Ash258"
	],
	"packageRules": [
		{
			"description": "Dockerfile base image updates",
			"matchDatasources": [
				"docker"
			],
			"enabled": true,
			"automerge": false,
			"groupName": "Docker base images",
			"commitMessagePrefix": "chore(docker): ",
			"prTitle": "Update Docker base image {{depName}} to {{newVersion}}",
			"prBodyTemplate": "This PR updates the Docker base image {{depName}} from {{currentVersion}} to {{newVersion}}.\n\n### Changes\n- Updated {{depName}} from {{currentVersion}} to {{newVersion}}\n\n{{#if hasReleaseNotes}}\n### Release Notes\n{{{releaseNotes}}}\n{{/if}}\n\n---\n\n**Auto-generated by Renovate Bot**",
			"matchPackageNames": [
				"/.*/"
			]
		}
	],
	"dockerfile": {
		"enabled": true
	},
	"docker-compose": {
		"enabled": true
	},
	"rebaseWhen": "behind-base-branch",
	"dependencyDashboard": true,
	"dependencyDashboardTitle": "Dependency Dashboard - Docker Images"
}
